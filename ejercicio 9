program ejercicio9; //<>/


var
 caracter: char;
 contador, numeros: integer;
 
begin
 
 contador:= 0;
 
 writeln ('ingrese un caracter'); readln (caracter);
 
 if (caracter = '+' ) or (caracter  = '-' ) then begin
  writeln ('ingresar numero'); readln (numeros);
  while (numeros <> 0) do begin
   if (numeros < 0) then
    writeln ('(', numeros, ')', '+')
   else
    writeln (numeros, '+');
    
   contador:= contador + numeros;
   
   writeln ('=', ' ', contador);
   end;
  end
 else
  writeln ('error');
  
end.
